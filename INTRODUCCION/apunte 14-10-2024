#include <iostream>

using namespace std;

int main()
{
	// Enteros
	int a = 10;
	int b = 20;
	int c;

	//Flotantes
	float x = 15;
	float y = 5;
	float z;

	//Operadores comparativos
	//Es para imprimir true en lugar de 1 o false en lugar de 0 
	cout << boolalpha;

	//1. igualdad
	cout << "(a == b)" << (a == b) << endl;
	cout << "(x == y)" << (x == y) << endl;

	//2. Desigualdad
	cout << (a != b) << endl;
	cout << (x != y) << endl;

	//3.Mayor que 
	cout << (a > b) << endl;
	cout << (x > y) << endl;

	//4. menor que 
	cout << (a < b) << endl;
	cout << (a > b) << endl;

	//9. combinaciones de comparaciones
	cout << ((a < b) and (x < y)) << endl;
	cout << ((a == 10) or (x == 5.2)) << endl; 

	//10. comparciones aÃ±adidas 
	cout << (a > b - 10) << endl;
	cout << (x <= y + 10.3) << endl;

	//11. comparacion con constantes
	cout << (a == 10) << endl;
	cout << (y == 5.2) << endl;

	//12.comnparacion con los resultados de las operaciones aritmetica
	cout << ((a + b) < (x * y)) << endl;
	cout << ((b - a) <= y) << endl;

	// 13. comparacion de resultados negativos  positivos 
	cout << (-a < b) << endl;
	cout << ((-x) < y) << endl;

	// 14. combinacion aritmetica y comparacion
	cout << ((a * b) > (x - y)) << endl;
	cout << ((b / a) >= (x + y)) << endl;

	//15.comparaciones encadenadas
	cout << (a < b and b < x) << endl;
	cout << (y > x and x > a) << endl;

	//16. comparacion de modulos
	cout << ((b % a) == 0) << endl;
 }
